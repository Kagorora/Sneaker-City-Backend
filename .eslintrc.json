{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off",
      "import/no-dynamic-require": "off",
      "global-require": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
